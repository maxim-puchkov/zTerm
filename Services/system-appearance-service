typeset -A dark_appearance
dark_appearance=($(< appearances))


{ read begin_hour; read end_hour } < interval
begin_time=$( date -v "${begin_hour}H" -j +'%s' )
end_time=$( date -v "${end_hour}H" -j +'%s' )


current_time=$(date -j +'%s')
if [[ $current_time -ge $begin_time ]] &&
    [[ $current_time -lt $end_time ]]; then
    new_status="off"
else
    new_status="on"
fi


log="$(date -r $current_time -j +'%b %d %T') $(hostname -s) ${0:t}[$$]:"

current_status=$( /usr/local/bin/dark-mode status )
if [[ $new_status == $current_status ]]; then
    log="${log} [1] ${dark_appearance[$new_status]} is already set."
    echo $log >&2
    exit 1
fi

log="${log} [0] system appearance changed to ${dark_appearance[$new_status]}."
echo $log
/usr/usr/local/bin/dark-mode $new_status &> /dev/null
exit 0



#echo $@ > "/Users/admin/Desktop/debug$(date).txt"
#exit 0
