#!/bin/zsh

#  ztermlink
#  bin
#
#  Generated by 'ztemplate' (zterm/zsh/functions) on 2020-10-20
#  Copyright Â© 2020 Maxim Puchkov. All rights reserved.


typeset LIB_DIR="/usr/local/zterm/Library"
typeset SERVICES_DIR="$LIB_DIR/Services"
typeset APPLESCRIPT_DIR="$LIB_DIR/AppleScript"


function link_file() {
  local source_file=${1:?}
  local link_dir=${2:?}
  local link_name=$link_dir/${source_file:t:r:l:gs/ /-/}
  echo /bin/ln -Ffhs $source_file $link_name
}




typeset file

# Link wofkflow
if [[ -e $SERVICES_DIR ]]; then
  for file in $SERVICES_DIR/*; do
    link_file "$file" "$SERVICES_DIR"
  done
fi

if [[ -e $APPLESCRIPT_DIR ]]; then
  for file in $APPLESCRIPT_DIR/*; do
    link_file "$file" "$APPLESCRIPT_DIR"
  done
fi
