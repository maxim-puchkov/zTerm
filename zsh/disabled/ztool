#!/bin/zsh

#  ztool
#  devx
#
#  Created by admin on 2020-04-08.
#  Copyright Â© 2020 Maxim Puchkov. All rights reserved.


function ztool() {
    local tool_name="$1"
    local filename="${tool_name:?}.scpt"
    local tools="$DEV/Terminal/zsh/tools"
    local script=$( find "$tools" -name "$filename" )
    if [[ -z $script ]]; then
        printf 'File not found: %s.\n' "'$(Bad $filename)'"
        return 1
    fi
    local exitcode=$( osascript -l AppleScript $script )
    printf '%u\n' $exitcode >&2
    return $exitcode
}
