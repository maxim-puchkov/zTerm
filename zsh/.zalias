# User-specific profile for interactive zsh(1) shells


#MARK: - Global Aliases
# Shell output
alias -g noerr='2> /dev/null'  # redirect stderr
alias -g quiet='&> /dev/null'  # redirect stdout and stderr
alias -g 2NIL='2> /dev/null'
alias -g NIL='&> /dev/null'
# If statement: if [[ ... ]] T
alias -g T='; then echo "-- $(green True)  $(pass) --";  return 0; \
              else echo "-- $(red   False) $(fail) --";  return 1; \
            fi;'



#MARK: - Regular Aliases
# Command 'ls'
alias ls='command ls -FGHh'
alias la='ls -la'
alias l='ls -l'
alias ll='ls -lA'
alias lll='ls -lR'
alias llll='ls -lAR'
# List
alias ltc='list tc'
alias lta='list ta'
alias ltch='list tch'
alias ltm='list tm'
alias lS='list S'
alias lf='list f'

# Brew
alias bb='brew_browse'
alias bi='brew info'

# Command 'cp'
alias cp='command cp -i'

# Builtin 'cd'
alias cfd='cd -- "$pfd"'

# List of commands
alias cmdlist='printf "%s\n" ${commands:t}'

# Builtin 'echo'
alias e='builtin echo'
alias E='b_redbg'

# Builtin 'print'
#alias print='builtin print -P'
alias printp='builtin print -P'
alias printl='builtin print -l'
alias printn='builtin print -n'
alias p='print'
alias pl='printl'
alias pn='printn'


function k() {
    print -P -- "%U$argv keys%u:   %B%F{4}${(Pkj:%f%b, %B%F\{4\}:)argv}%f%b"
}
function v() {
    print -P -- "%U$argv values%u: %B%F{6}${(Pvj:%f%b, %B%F\{6\}:)argv}%f%b";
}
#alias k='() { print -P -- "%UKeys%u: %B%F{4}${(Pkj:%f%b, %F\{4\}:)argv}"; }'
#alias v='() { }'


# Builtin 'exit'
alias q='exit'

# Command 'find'
alias ffind='/usr/bin/find -L'

# Command 'git'
alias gs='git status'
alias grs='git restore --staged'
alias gt='() { cdp "$zterm"; git status; }'

# Command 'grep'
alias grepa='egrep --color=always --text --regexp ".*"'
alias mang='grepman'

# Help
alias {h,help}='run-help'

# Command 'launchctl'
alias lctl='command launchctl'

# Command 'mv'
alias mv='command mv -i'

# Command 'open'
alias o='open "$PWD"'
alias xopen='open -a Xcode'
alias textopen='open -a TextEdit'
alias webopen='open -a Safari'
alias scriptopen='open -a "Script Editor"'
alias vb='open -a VirtualBox'

#
alias sha256='openssl sha256'

# Builtin 'set'
alias set3='set -- -a -b -c'
alias set6='set -- -a -b -c -d D -e E -f F'
alias set+='set -- -a -b -c -d D -e E -f F --long LONG args "hello world"'

# Python
alias python='python3'
alias pip='pip3'
alias idle='idle3'

# Command 'pygmentize'
#alias highlight='pygmentize -f "terminal16m" -O style="xcodedark" -l "zsh"'

# Command 'rm'
alias rm='command rm -i'

# Command 'strings'
alias str='strings'


# Type
alias i='infocmd'
alias t='typeof'
alias wh='builtin whence -av'

# Files
alias lock='chflags uchg'
alias unlock='chglags nouchg'


#MARK: - Extended Commands
alias cd='cdp'
alias ln='lnp'






