# User-specific profile for interactive zsh(1) shells


#MARK: - Global Aliases
# Shell output
alias -g noerr='2> /dev/null'  # redirect stderr
alias -g quiet='&> /dev/null'  # redirect stdout and stderr
alias -g 2NIL='2> /dev/null'
alias -g NIL='&> /dev/null'
# If statement: if [[ ... ]] T
alias -g T='; then echo "-- $(green True)  $(pass) --"; \
              else echo "-- $(red   False) $(fail) --"; \
            fi;'

alias ei='open -a Xcode "$zterm/Services/Identity"'

