# User-specific profile for interactive zsh(1) shells


#MARK: - Global Aliases
# Shell output
alias -g noerr='2> /dev/null'  # redirect stderr
alias -g quiet='&> /dev/null'  # redirect stdout and stderr
alias -g 2NIL='2> /dev/null'
alias -g NIL='&> /dev/null'
# If statement: if [[ ... ]] T
alias -g T='; then echo "-- $(green True)  $(pass) --";  return 0; \
              else echo "-- $(red   False) $(fail) --";  return 1; \
            fi;'



#MARK: - Regular Aliases
# Command 'ls'
alias ls='command ls -FGHh'
alias la='ls -la'
alias l='ls -l'
alias ll='ls -lA'
alias lll='ls -lR'
alias llll='ls -lAR'

# Brew
alias bb='brew_browse'
alias bi='brew info'

# Command 'cp'
alias cp='command cp -i'

# Builtin 'cd'
alias cfd='cdp -- "$pfd"'

# List of commands
alias cmdlist='printf "%s\n" ${commands:t}'

# Builtin 'echo'
alias e='builtin echo'
alias E='b_redbg'
alias p='builtin print -P'


# Command 'find'
alias ffind='/usr/bin/find -L'

# Builtin 'exit'
alias q='exit'
#alias q!='killall "${SHELL:t}"'

# Help
alias {h,help}='run-help'

# Command 'git'
alias gs='git status'
alias grs='git restore --staged'
alias gt='() { cdp "$zterm"; git status; }'

# Command 'grep'
alias grepa='egrep --color=always --text --regexp ".*"'
alias mang='grepman'

# Command 'launchctl'
alias lctl='command launchctl'

# Command 'mv'
alias mv='command mv -i'

# Command 'open'
alias o='open "$PWD"'
alias xopen='open -a Xcode'
alias textopen='open -a TextEdit'
alias webopen='open -a Safari'
alias scriptopen='open -a "Script Editor"'

alias sha256='openssl sha256'

alias my-phone='print -P "%F{14}+1 %B(778) 512-7614â€¬%b%f"'

# Python
alias python='python3'
alias pip='pip3'
alias idle='idle3'

# Command 'pygmentize'
alias colorize='pygmentize -f "terminal16m" -O style="xcodedark" -l "zsh"'

# Command 'rm'
alias rm='command rm -i'

# Command 'strings'
alias str='strings'


# Type
#alias i='type -a'
alias t='typeof'

alias wh='whence'


#MARK: - Extended Commands
alias cd='cdp'
alias ln='lnp'


alias rre='open -a Xcode "$DEV/bin/run.sh"'
alias rr='zsh "$DEV/bin/run.sh"'

alias rte='open -a Xcode $DEV/bin/run-tests.zsh'
alias rt='zsh "$DEV/bin/run-tests.zsh"'
