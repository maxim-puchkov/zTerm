# User-specific profile for interactive zsh(1) shells.


# Shell output.
alias -g noerr='2> /dev/null'  # redirect stderr
alias -g quiet='&> /dev/null'  # redirect stdout and stderr

# If statement: if [[ ... ]] T.
alias -g T='; \
    then \
        echo "-- $(green True) $(pass) --"; \
        return 0; \
    else \
        echo "-- $(red False) $(fail) --"; \
        return 1; \
    fi;'

# Command 'ls'.
alias ls='command ls -GF'
alias l='ls -lAh'
alias la='ls -lah'
alias ll='ls -lh'

# Command 'echo'.
alias e='builtin echo'
alias E='b_redbg'

# Command 'history'.
alias h='() { n=100; n=${@:+$HISTCMD}; history -${n} | grep -E "${@:-''}" }'

# Command 'rm'.
alias rm='command rm -i'

# Command 'git'.
alias gs='git status'
alias gt='() { cdp "$ztermdir"; git status; }'

# Command 'grep'.
alias grep='grep --color'
alias mang='grepman'

# Command 'open'.
alias xopen='open "/Applications/Xcode.app"'
alias txtopen='open "/System/Applications/TextEdit.app"'
alias webopen='open "/Applications/Safari.app"'
alias scriptopen='open "/System/Applications/Utilities/Script Editor.app"'

# Command 'which'.
#alias which='__which_alias'




# Script 'dir'.
alias dm='idir mod'

# Script 'get_options'.
alias get_options='get_options_v2'


# Python.
alias python='python3'
alias idle='idle3'

alias rr='zsh "$DEV/bin/run.sh"'
