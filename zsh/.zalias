# User-specific profile for interactive zsh(1) shells


#MARK: - Global Aliases
# Shell output
alias -g noerr='2>/dev/null'  # redirect stderr
alias -g 2NIL='2>/dev/null'
alias -g quiet='&>/dev/null'  # redirect stdout and stderr
alias -g NIL='&>/dev/null'

# 'if [[ ... ]] _T'
alias -g _T='; then print -P -- TRUE; else print -P -- FALSE; fi;'
# 'for x in $array _F', 'while read x _F'
alias -g _F='; do print-var x; done;'

alias it2s='it2 switch-profile'
alias 2s='it2s'


#MARK: - Regular Aliases
# Builtin 'autoload'
alias al-='builtin autoload'
alias al='builtin autoload -Uz'
# Builtin
alias bltn='builtin builtin'
# Command 'ls'
alias ls='/bin/ls -BFGHhk'
alias la='ls -la'
alias l='ls -l'
alias ll='ls -la'
alias lll='ls -laR'

# Command 'chflags'
alias lock='/usr/bin/chflags uchg'
alias unlock='/usr/bin/chflags nouchg'

# Command 'cp'
alias cp='/bin/cp -i'

# Builtin 'echo'
alias e='builtin echo -'
alias E='esc 1 38 45 -r 0 -t'

# Builtin 'functions'
alias fns='functions'

# Command 'find'
alias findl='/usr/bin/find -L'

# Builtin 'print'
alias printp='builtin print -P'
alias pp='printp'
alias p='printp'

alias printl='builtin print -l'
alias pl='printl'

alias printn='builtin print -n'
alias pn='printn'

alias print-='builtin print -P --'
alias p-='print-'
alias pi='print-input'
alias printd='builtin print -P -D'

# Pygments
alias pyg='pygmentize'

# Builtin 'exit'
alias q='builtin exit 0;'

# Command 'git'
alias gs='git status'
alias grs='git restore --staged'
alias gt='() { cd "$zterm" && git status; };'

alias int='integer'

# Command 'grep'
alias gr='grep'
alias grepa='egrep --color=always --text --regexp ".*"'
alias mang='grepman'

# Help
alias {h,help}='run-help'

# Command 'launchctl'
alias cdef='compdef'
alias lctl='command launchctl'

# Command 'mv'
alias mv='/bin/mv -i'

# Command 'open'
alias o='open "$PWD"'
alias xopen='open -a Xcode'
alias xbopen='open -a /Applications/Xcode-beta.app'
alias textopen='open -a TextEdit'
alias webopen='open -a Safari'
alias scriptopen='open -a "Script Editor"'
alias vb='open -a VirtualBox'
alias music='open -a Music'

# Command 'openssl'
alias sha256='openssl sha256'

# Python
alias python3.7='/usr/local/opt/python@3.7/bin/python3.7'
alias python3.8='/usr/local/opt/python@3.8/bin/python3.8'
alias python='command python3'
alias p3='python3'
alias pip='command pip3'
alias idle='command idle3'

# Command 'rm'
alias rm='/bin/rm -i'

# Builtin 'set'
alias set1='set -x; set +x -- -x -y oy -z oz1 oz2 -- -r REST'
alias set2='set -- -a -b -c -d D -e E -f F'
alias set3='set -- -a -b -c -d D -e E -f F --long LONG args "hello world"'
alias ext='set -o extendedglob'

# Command 'strings'
alias str='command strings'

alias ts='typeset'
alias Float='typeset -F'

# Builtin 'whence'
alias wh='builtin whence -av'

alias hd='hexdump'


#MARK: - Extended Commands
alias cd='cdp'




#MARK: - Custom Commands
# Highlight brackets
alias brk='brackets'

# List
alias ltc='list tc'
alias lta='list ta'
alias ltch='list tch'
alias ltm='list tm'
alias lS='list S'
alias lSa='list S -a'
alias lf='list f'

alias lsimg='imgls'

# Brew
alias bb='brew_browse'
alias bi='brew info'

# Print last return code
alias C='retc'

# cd
alias cfd='cd -- "$(pfd)"'

# set-system-appearance
alias darks='set-system-appearance dark'
alias lights='set-system-appearance light'

# Print
alias pv='print-var'
alias pv@='print-var @'
alias pvo='print-var @ optlist'
alias pvt='print-var -t'

alias pfs='print-fstack'
alias pdb='print-debug'

alias print-input='builtin print -P -- "$0: ${(j:, :)@}"'


# Show command source
alias ss='showsrc'
alias s='show'
alias i='show'




#MARK: Miscellaneous
alias rre='open -a Xcode "$DEV/bin/run.sh"'
alias rr='zsh "$DEV/bin/run.sh"'
alias rte='open -a Xcode $DEV/bin/run-tests.zsh'
alias rt='zsh "$DEV/bin/run-tests.zsh"'


