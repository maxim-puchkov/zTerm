alias ts='typeset'

function Array array() {
    typeset type=${0[1]}
    typeset id=$1
    shift
    if [[ -v $id ]]; then
        unset $id
    fi
    typeset $type -g $id
    set -A $id $argv
    if [[ -n ${(P)id} ]]; then
        notify -P -- "%F{4}%U${id}%u%f[${#}] = "\
            "{ ${(j:, :)argv} }" >&2
    fi
}
