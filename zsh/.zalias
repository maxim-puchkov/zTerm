# User-specific profile for interactive zsh(1) shells


#MARK: - Global Aliases
# Shell output
alias -g noerr='2> /dev/null'  # redirect stderr
alias -g 2NIL='2> /dev/null'
alias -g quiet='&> /dev/null'  # redirect stdout and stderr

# If statement: if [[ ... ]] T
alias -g T='; then echo "-- $(green True)  $(pass) --";  return 0; \
              else echo "-- $(red   False) $(fail) --";  return 1; \
            fi;'



#MARK: - Regular Aliases
# Command 'ls'
alias ls='command ls -FGHh'
alias la='ls -la'
alias l='ls -l'
alias ll='ls -lA'
alias lll='ls -lR'
alias llll='ls -lAR'

# Brew
alias bb='brew_browse'
alias bi='brew info'

# Command 'cp'
alias cp='command cp -i'

# Builtin 'cd'
alias cfd='builtin cd -- "$pfd"'

# List of commands
alias cmdlist='printf "%s\n" ${commands:t}'

# Builtin 'echo'
alias e='builtin echo'
alias E='b_redbg'

# Builtin 'exit'
alias q='exit'
alias q!='killall "${SHELL:t}"'

# Help
alias help='run-help'

# Command 'git'
alias gs='git status'
alias grs='git restore --staged'
alias gt='() { cdp "$zterm"; git status; }'

# Command 'grep'
alias grepa='egrep --color=always --text --regexp ".*"'
alias mang='grepman'

# Command 'launchctl'
alias lctl='command launchctl'

# Command 'mv'
alias mv='command mv -i'

# Command 'open'
alias xopen='open -a Xcode'
alias textopen='open -a TextEdit'
alias webopen='open -a Safari'
alias scriptopen='open -a "Script Editor"'

# Python
alias python='python3'
alias pip='pip3'
alias idle='idle3'

# Command 'pygmentize'
alias colorize='pygmentize -f "terminal16m" -O style="xcodedark" -l "zsh"'

# Command 'rm'
alias rm='command rm -i'

# Command 'strings'
alias str='strings'


# Type
#alias i='type -a'
alias t='typeof'




alias rr='zsh "$DEV/bin/run.sh"'
