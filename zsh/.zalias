function print-control-char() {
    typeset -i10 -Z2 code
    for code in $argv; do
        typeset hex=0x${code[1,2]}
        if [[ -t 1 ]]; then
            printf '%s:  ' "${hex}"
        fi
        printf '%b\n' "\\${hex}"
    done
    return 0
}
