# User-specific profile for interactive zsh(1) shells


#MARK: - Global Aliases
# Shell output
alias -g noerr='2>/dev/null'  # redirect stderr
alias -g 2NIL='2>/dev/null'
alias -g quiet='&>/dev/null'  # redirect stdout and stderr
alias -g NIL='&>/dev/null'

# 'if [[ ... ]] _T'
alias -g _T='; then print -P -- TRUE; else print -P -- FALSE; fi;'
# 'for x in $array _F', 'while read x _F'
alias -g _F='; do print-var x; done;'


function substitution() {
  typeset x=' x ' y=' y '
  typeset -a ops=(+ :+ - :-)
  local op expr
  typeset -a reply
  print-h 'Substitution'
  for op in $ops; do
    expr='${x'${op}'$y}'
    reply+=("%B%F{5}${op}%f%b" "${expr}" "${(e)expr}")
  done
  print -aC3 -- ${(%)reply}
#  echo ${x:-$y}
#  echo ${x+$y}
#  echo ${x:+$y}
  return 0
  
}



