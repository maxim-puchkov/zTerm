function manp() {(
    local name="$argv"
    local dir="${zterm}/share/man"
    if [[ ! -d $dir ]]; then
        /bin/mkdir -p -- $dir
    fi
    local file="${dir}/${name}"
    /usr/bin/man  -t -- $name > $file
    /usr/bin/open -a Preview -- $file
)}

