function lines() {
    typeset filename=$1
    shift
    typeset -a line_numbers=($argv)
    typeset regex=${(j:|:)line_numbers}
    
    
    
    S "file = $filename ; ln# = ${(j:,:)line_numbers}"
    
    awk -v lines="${(j:,:)line_numbers}" 'BEGIN {
        split(lines, )
        for (i = 0; i < length(lines); i++) {
            print i
            print "line at "i" = "lines[i]
        }
        
    }' <$f
    
    
    
    
    return 2
    awk -v lines=${(j::)line_numbers} '
    BEGIN {
        split(lines, line_numbers, "")
    } {
        printf "nr = "NR" "
        printf "is in line numbers?"
        if (NR in line_numbers) {print "YES"} else {print "NO"}
        if (NR in line_numbers) {print}
    }' <$filename
    return 0
    
    print-var line_numbers
    awk 'BEGIN {split('${(j: :)line_numbers}', linesm, IFS); print "my array linesm is "linesm[1];}  {if (NR in linesm) print}' <$filename
