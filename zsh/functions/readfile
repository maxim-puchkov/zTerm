# Read a file and save its

# Read every line of a file and store it
# in an array
function readfile() {
    # Options
    typeset delim=$'\n'
    typeset -i input_fd=0
    typeset -i echo_input=0
    typeset -i assign_input=0
    while [[ -n $1 ]] && [[ $1 =~ '^[+-]' ]]; do
        blue "\$1 is $1 with arg \$2 = $2."
        case $1 in
            -d)  delim=$2       ;;
            -u)  input_fd=$2    ;;
            -E)  echo_input=1   ;;
            -e)  echo_input=1
                 assign_input=0 ;;
            *)   ;;
        esac
        shift
    done
    
    typeset -a lines
    lines=(${(f)"$(<&$input_fd})"})
    exec ${myfd}
    if [[ $echo_input -eq 1 ]]; then
        echo "$lines"
    fi
    
    typeset reply=${1:-reply}
    typeset -ag $reply
    set -A $reply $lines
    return 0
}

