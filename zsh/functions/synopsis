# synopsis:
# <#Function description#>
#
# Usage:
# synopsis  <#...#>
emulate -LR zsh
autoload -Uz error

if (command man -W $argv &>/dev/null); then
  command man $argv \
  | command col -b \
  | command awk '/^SYN/, /^$/ {print $0;}' \
  | command sed -e '/^SYN/d' -e '/^$/d' \
  | command cat -n
else
  error -1 'no manual page for ${argv}'
fi
