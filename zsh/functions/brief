# Display brief description (first paragraph)
# of a command, function, or file.
function brief() {
    # Get contents of the manual page.
    local manpage=$1
    local contents=$( command man $manpage | colcrt - )
    
    # Print first paragraph of description.
    while read line; do
        if [[ $line == 'DESCRIPTION' ]]; then
            while read desc_line; do
                if [[ -z $desc_line ]]; then break; fi
                echo $desc_line
            done
        fi
    done <<< $contents
    
    return 0
}
