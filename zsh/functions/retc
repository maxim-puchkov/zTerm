# Print return code of the last command.
function retc() {(
    escseq() {
        printf '\e[%dm' $1
    }

    let code=$?
    
    dim=$(escseq 2)
    color=$code
    nocolor=39
    nodim=$(escseq 9)
    
    printf '%b--- Return code: %b%d%b ---%b\n' \
        $dim $color $code $nocolor $nodim
   return $code
   
#    print -P -- "--- Return code: %F{%(?.2.1)}%?%f ---"; #&& print "return $?"
)}


