# <#Function description#>
function app() {
    local app_name="$1"
    local flags=('')
    
    ## finder: open Finder ##
    function app_finder() {
        open $flags -a Finder
    }
    ## safari: open Safari ##
    function app_safari() {
        open $flags -a Safari
    }
    ## xcode: open Xcode ##
    function app_xcode() { open $flags -a Xcode; }
    
    # Execute the command
    local cmd=$1
    ${0}_${cmd} $fname
    return $?

}
