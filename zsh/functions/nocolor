# <#usage...#>
emulate -L zsh
setopt extended_glob

if [[ ! -t 0 ]] ||
   [[ -p /dev/stdin ]]; then
  set -- ${argv} ${(@f)"$(<&0)"}
fi

printf '%s\n' "${*//$'\033['[0-9;]#m/}"
