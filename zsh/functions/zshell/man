# Return status code 1 if 'man' is invoked
# without the name of manual page.
function man() {
    local args="$@"
    tmp=$( tempfile )
    command man -w $args >& $tmp
    found=$(< $tmp)
    rm -f  $tmp
    
    colored command man $args
    if [[ -r $found ]]; then
        return 0
    else
        return 1
    fi
}
