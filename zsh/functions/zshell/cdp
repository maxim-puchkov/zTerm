# Change directory and print its path.
function cdp() {
    local dir=${${1:-$HOME}:a}
    
    if [[ ! -e "$dir" ]]; then
        echo "no such file or directory: $( red $dir )."
        return 1
    fi
    
    if [[ "$dir" != "$PWD" ]] && cd "$dir"; then
        echo "current directory changed to '$( green $PWD )'"
    fi
    
    return 0
}

