# <#Function description#>
function mlist() {
    printf "Functions modified after $(bcyan %s).\n" "$(stat -f '%Sm' $SHELLSTARTUP)" # "$(bcyan $(date -r $LASTUPDATE))"
    
    local updated_files=($( find "$zfunc/zshell" -type f -mnewer $SHELLSTARTUP ))
    for filepath in $updated_files; do
        local fn_name=${filepath:t}
        local fn_mtime=$(stat -f '%Sm' $filepath)
        printf "$(blue %s): modified on %s\n" "$fn_name" "$fn_mtime"
    done
    
    return 0
}
