# Display full manual page as text or
# search for matching pattern.
function mantxt() {
    local manpage=$1
    local search=(${@:2})
    
    local contents=$( man $manpage | colcrt - )
    if [[ ${#search} -eq 0 ]]; then
        echo "$contents"
    else
        echo "$contents" | grep -a --color $search
    fi
}
