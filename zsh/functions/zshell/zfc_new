## new: print the name of last modified function ##
function zfc_new() {
    local newest=($zfunc/zshell/*(Nm0om[1]))
    local change_time=$(stat -f '%Sm' $newest)
    if [[ ! -f "$newest" ]]; then
        return 1
    fi
    newest=${newest#$zfunc}
    printf 'Newest: %s (modified on %s).\n' $(blue "$newest") "$change_time"
    return 0
}
