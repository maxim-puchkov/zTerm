# Trace a command.
function ztrace() {
    function __ztrace() {
        printf "\n$(magenta %s) $(bmagenta %s)...\n" 'Tracing' "${*}"
        setopt xtrace
        local trace=$( "$@" 2>&1 )
        printf "$(Info %s)\n" "${trace:-<No output>}"
        setopt noxtrace
        printf "$(magenta %s)\n\n" 'Trace complete.'
    }
    
    if [[ $# -eq 0 ]]; then
        return 1
    fi
    
    __ztrace "$@"
    return 0
}
