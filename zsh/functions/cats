# <#Function description#>
function cats() {
  local input
  local file
  for file; do
    printf 'File: %s\n' "$(bold $file)"
    cat <$file
    
    if [[ $file == ${argv[-1]} ]]; then
      break
    fi
    
    yellow $(em 'Press return to continue...')
    read -sk input
    
    if [[ $input != $'\n' ]]; then
      break
    fi
  done
}
