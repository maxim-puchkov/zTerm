# <#Function description#>
function argn() {
  value=$1
  shift
  if [[ $# -gt 0 ]]; then
    print -m "<-$#>" -- "${argv[(i)$value]}"
  else
    trap 'print -m "<-$#>" -- "${argv[(i)$value]}"' EXIT
  fi
}
