# <#Function description#>
function spectrum() {
    for code in {000..010}; do
        print -a -C2 -P -- \
        "$code: %{$FG[$code]%}$ZSH_SPECTRUM_TEXT%{$reset_color%}" \
        "$code: %{$BG[$code]%}$ZSH_SPECTRUM_TEXT%{$reset_color%}"
    done
}
