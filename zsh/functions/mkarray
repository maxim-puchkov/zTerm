# <#Function description#>
function mkarray() {
    set -- $@
    typeset array_id=$1
    shift

    typeset -a shell_command=($@)
    typeset -a array
    array=(${(@f)"$(
        $=shell_command 
    )"})

    set -A $array_id $array
    return $?
}
