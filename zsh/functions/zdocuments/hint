function hint() {

    function desc() {
        local cmd_name="$(U $(Bc ${1#hint_}))"
        local cmd_desc="$(blue $2)"
        echo "$cmd_name: $cmd_desc"
    }

    function hint_freq() {
        desc "$0" "Some text"
        history | awk '{print $2}' | sort | uniq -c | sort -rn | head
    }
    
    
    
    hint_freq

}
