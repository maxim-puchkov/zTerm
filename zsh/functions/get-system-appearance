# <#Function description#>
function get-system-appearance() {
  # Set available appearances (light, dark)
  typeset -A appearances
  appearances=('light' 'off'  'dark' 'on')
  
  # Print current system appearance
  typeset current_status=$(/usr/local/bin/dark-mode status)
  print -r -- ${(k)appearances[(r)$current_status]}
  
  return 0
}
