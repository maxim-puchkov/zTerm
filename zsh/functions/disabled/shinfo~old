# which shell
function shinfo() {
    local all=$( echo $options | wc -w )
    local on=$( echo $options | grep 'on' -o | wc -l )
    all="${all// }"
    on="${on// }"
    echo "$SHELL - level $SHLVL, $on/$all options enabled"
}
