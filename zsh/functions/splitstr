# <#Function description#>
function splitstr() {(
    typeset -i length=${1:-1}
    shift
    typeset str="$argv"
    printf '%s\n' "$str" | /usr/bin/grep \
        --only-matching \
        -e "${(pl:$length::.:)}"
    return $?
)}
