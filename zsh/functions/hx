# hx - hexdump files
function hx() {
  typeset -a hexyl_options
  
  for file; do
    printf '%s %s\n' \
      "$(esc0 1 -t ">")" \
      "$(esc0 93 -t "$file")"
    hexyl $hexyl_options <$file
    printf '\n'
  done
  
  return 0
}

