# order
#
# <#Description...#>
#
# Usage:
# order -c
# <#usage...#>
emulate -L zsh


# Function options
## -c :: Order characters
## -l :: Order lines
local -A opts
local -a specs
specs=('c')
if [[ $# -gt 0 ]] &&
   {! zparseopts -D -K -M -A opts - $specs}; then
  return 1
fi


# Function arguments
if [[ $# -eq 0 ]]; then
  error -1 -m 'not enough arguments'
fi


if [[ ${+opts[-c]} -eq 1 ]]; then
  # If '-c' option is set, order unique characters
  set -- ${(j::)${(@ous::)argv}}
else
  # Otherwise, order unique lines
  set -- ${(@ou)argv}
fi


# Print result
print -nr -C1 -- $argv
return $(( $# == 0 ))
