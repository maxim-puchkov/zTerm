# Print file size in bytes
function fsize() {
    typeset -A result
    for filename in "${@:-$PWD}"; do
        local _type="$(stat -f '%HT' $filename)"
        local _size="$(blue $(stat -f '%z' $filename)) bytes"
        result+=( "${filename:t}:     " "$_type, $_size" )
    done
    
    print -C 2 ${(k)result} ${(v)result}
    return $?
}
