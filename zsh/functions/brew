# Homebrew wrapper
function brew() {(
#    print -P -- 'Homebrew wrapper function'
#    print-line
#    fn show $0
#    print-line
#    print -P -- "Command: '%S%B${0}%b ${argv}%s'"
    local brew_command=$1
    case $brew_command in
        'install')
            local log=$ZTERM/var/log/Homebrew/install.log
            for formula in ${argv:2}; do
                echo $formula >> $log
            done
        ;;
    esac
#
    logf $argv
#    ${=argv}
        
)}


