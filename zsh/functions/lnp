# <#Function description#>
function lnp() {
    local source_file=$argv[-2]
    local target_file=$argv[-1]
    print -P "Source file: %B%F{14}$source_file%f%b; Target file: %B%F{14}$target_file%f%b."
    if $(ln $argv); then
        print -P -- "Link created: ${source_file} -> %F{13}${target_file}%f%b" # %F{10}%f%b"
    else
        print -P -- "error"
    fi
}
