# Search manual pages for lines matching the pattern.
function grepman() {
    local manpage=$1
    local grep_options=(${@:2})
    
    # Display error if manual page not specified
    SYNTAX="$0 manpage grep_options?"
    if (! syntax_check "$SYNTAX"); then
        return 1;
    fi
    
    # Print matching lines
    man $manpage |
        colcrt - |
        grep --color -a -i -e $grep_options
}
