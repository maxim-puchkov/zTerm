# colored-man-pages
function man() {
    # List of color themes
    typeset -a themes=('dark' 'light')
    typeset theme='dark'
    # Find color theme in the list
    typeset -i10 index=${themes[(I)$1]}
    if [[ $index -ne 0 ]]; then
        theme=${themes[$index]}
        shift
    fi
    colored -t $theme $0 "$@"
}
