#!/bin/zsh

#  isdef
#  Z-Function (41)
#
#  Created by Maxim Puchkov on 2020-05-29.
#  Copyright Â© 2020 Maxim Puchkov. All rights reserved.


# Function description
function isdef() (
    if [[ $# -eq 0 ]]; then
        error -2 'No arguments.'
    fi
    
    # Try to execute the command
    typeset cmd="$@"
    () (
        ${=cmd}
        return $?
    ) &>/dev/null
    
    #
    typeset -i exit_code=$?
    case $exit_code in
        127) # print -P -- "Not found: %F{1}$cmd%f" >&2
             return 1 ;;
        *)   return 0 ;;
    esac
)
