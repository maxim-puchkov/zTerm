# <#Function description#>
function alphabrew() {
    local letter=${1[1]}
    if [[ -z $letter ]]; then
        return 2
    fi
    
    local option=${2:-'-s'}
    brew desc $option "/^$letter.*/" |
        grep -E "^${letter}\w+:"
    
    if [[ $? -ne 0 ]]; then
        return 1
    fi
    return 0
}
