# Open URL
function ciphers() {
    local url="https://www.dcode.fr"
    local kinds=( "caesar-cipher" "affine-cipher"
                  "monoalphabetic-substitution" "vigenere-cipher" )
    confirm "Open ${#kinds} URLs in Safari?"
    print "Opening online tools:"
    for k in $kinds; do
        print "\t$(c $k)"
        open -b com.apple.Safari "${url}/${k}"
    done
}

