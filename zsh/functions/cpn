#!/bin/zsh

#  cpn
#  Z-Function (7)
#
#  Created by Maxim Puchkov on 2020-04-29.
#  Copyright Â© 2020 Maxim Puchkov. All rights reserved.


# Copy a file n times.
function cpn() {
    if [[ $# -lt 2 ]]; then
        return 2
    fi
    local filepath="${1:a}"
    local n_copies=$2
    
    # File to copy
    local file="${filepath:t}"
    local filename="${file}"
    local fileext=''
    if [[ "$file" =~ '\.' ]]; then
        filename="${file%.*}"
        fileext=".${file##*.}"
    fi
    
    if [[ ! -r "${file}" ]]; then
        error "Cannot read file: '${file}'."
        return 1
    fi
    
    
    # Directory to save file copies
    local dir="${filepath:h}/${filename}-copies"
    if [[ -d $dir ]]; then
        find $dir \
             -regex "${dir}/${filename}\-.*${fileext}" \
             -exec rm -f -- {} \;
    fi
    mkdir -p $dir
    
    
    # Copy n times
    local i
    for i in {1..$n_copies}; do
        cp -np "${filepath}" "${dir}/${filename}-${i}${fileext}"
    done
    printf "Done: %d copies saved to '$(green '%s')'.\n" $n_copies "${(q)dir}"
    return 0
}
