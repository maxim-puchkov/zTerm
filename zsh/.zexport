# User-specific profile for interactive zsh(1) shells.


#MARK: - Environment variables
# du
export -i BLOCKSIZE=1024
# grep
export GREP_COLOR='1;95'
export PCREGREP_COLOUR="$GREP_COLOR"

# File editor
export EDITOR=$(< $ZTERM/etc/editor)
export GUI_EDITOR=$(< $ZTERM/etc/gui-editor)


# GPG
GPG_TTY=$(tty)
export GPG_TTY



# Package Managers
export HOMEBREW='/usr/local/Homebrew'
export CELLAR='/usr/local/Cellar'




# User directories
export DEV="$HOME/Developer"
export PROJ="$DEV/Projects"
export desk="$HOME/Desktop"
export testdir="$DEV/Test"
export devlib="$DEV/Library"
export tempdir="${TMPDIR}tempfiled"
export iCloud="$HOME/Library/Mobile Documents/com~apple~CloudDocs"

# Projects
export zterm='/usr/local/Terminal'
export ztermxcodeproj="$zterm/Terminal.xcodeproj"
export zetc="$zterm/etc"
export zvar="$zterm/var"

export zdot="$ZDOTDIR"
export zplug="$zdot/.oh-my-zsh/custom/plugins"
export zfunc="$zdot/functions"
export zsitefunc="$zdot/site-functions"
export zdisabled="$zdot/disabled"
export zcomp="$zdot/completions"
export ztest="$zdot/Tests"
export zcustom="$zdot/custom"

# SFU Files
export SFU="$iCloud/SFU"
export SFU_USER='mpuchkov'
export SFU_CSIL='csil-cpu4.cs.surrey.sfu.ca'
export SFU_MNT="/usr/local/mnt/${SFU_USER}@${SFU_CSIL}"
export SFU_TERM="$SFU/10-Spring-2020"
export A404="$SFU_TERM/404/assignments"
export A473="$SFU_TERM/473/assignments"
export A310="$SFU_TERM/PHIL 310/assignments"




# Misc. variables
export -a ALL_PARAMETERS=(
  options commands functions builtins reswords
  patchars aliases galiases saliases parameters
  modules dirstack history historywords jobdirs
  jobtexts jobstates nameddirs userdirs usergroups
  funcfiletrace funcsourcetrace funcstack functrace
)


