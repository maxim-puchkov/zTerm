function letters() {
    typeset -ag A
    typeset -ag N
    
    A=({A..Z})
    N=({1..26})
    local letter=${1[1]:-L}
    local compareTo=${2[1]}
    
    
    local index=${A[(wi)$letter]}
    if [[ $index -gt ${#A} ]]; then
        return 1
    fi
    A[$index]=$(b_bred $A[$index])
    N[$index]=$(b_bred $N[$index])
    
    
    local index2=${A[(wi)$compareTo]}
    A[$index2]=$(blue $A[$index2])
    N[$index2]=$(blue $N[$index2])
    
    {{ printf '  %s' $A; echo
        printf '%s ' $N; echo } |
        column -t }
}


