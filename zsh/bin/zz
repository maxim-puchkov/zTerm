#!/bin/zsh

#  zz
#  Generated by mkzsh at 05:46pm.
#
#  Created by mpuchkov/506:20 on August 27, 2022.
#  ~/zz

autoload -Uz error
local -A opts
local -a specs=(
  '-open'       'o=-open'
  '-executable' 'x=-executable'
  '-overwrite'  'w=-overwrite'
  '-verbose'    'v=-verbose'
  '-shell:-'       's:-=-shell'
)
zparseopts -D -F -M -A opts - $specs
typeset opts

echo $opts[--shell]
# if [[ $# -eq 0 ]]; then
#   error -1 -m 'not enough arguments'
# fi