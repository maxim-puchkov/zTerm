function OK() {
    b_green "$*"
}
function Warn() {
    yellow "$*"
}
function InfoSection() {
    b_bcyan $(underline "$*")
}
function Info() {
    cyan "$*"
}
function Bad() {
    b_red "$*"
}
function group() {
    local color=$1
    local lt=$2
    local rt=$3
    local text=$4
    echo "$($color $lt)${text}$($color $rt)"
}


