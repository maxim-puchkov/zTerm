# Input/output styles.


export -H __COLOR_NAMES__=( 'RED' 'GREEN' 'YELLOW' 'BLUE' 'MAGENTA' 'CYAN' )

function fg_color() {
    tput setaf ${1:?}
}
function bg_color() {
    tput setab ${1:?}
}
function boldtext() {
    tput bold
}
function __style_print() {
    printf '%s%s' $* $NORMAL
    echo
}

#export GREP_COLOR="$( fg_color 13 && boldtext )"
export GREP_COLOR="01;95"



#MARK: Styles Definitions
export -H NORMAL="$( tput sgr0 )"
export -H BOLD="$( tput bold )"
export -H UNDERLINE="$( tput smul )"
export -H REVERSE="$( tput rev )"

#MARK: Foreground Definitions
# Default
export -H BLACK="$( fg_color 0 )"
export -H WHITE="$( fg_color 255 )"
export -H RED="$( fg_color 1 )"
export -H GREEN="$( fg_color 2 )"
export -H YELLOW="$( fg_color 3 )"
export -H BLUE="$( fg_color 4 )"
export -H MAGENTA="$( fg_color 5 )"
export -H CYAN="$( fg_color 6 )"
export -H GREY="$( fg_color 7 )"
export -H DGREY="$( fg_color 8 )"
# Bright
export -H B_RED="$( fg_color 9 )"
export -H B_GREEN="$( fg_color 10 )"
export -H B_YELLOW="$( fg_color 11 )"
export -H B_BLUE="$( fg_color 12 )"
export -H B_MAGENTA="$( fg_color 13 )"
export -H B_CYAN="$( fg_color 14 )"
