##stat -f '%HT'
#
file="${1}"
#
#
#if [[ ! -f $file ]]; then
#    open $file
#    return 0
#fi


regular_file="${file%.}"

if [[ -r "$regular_file" ]] &&
    [[ -f "$regular_file" ]]; then
    open -a Xcode -g "$regular_file"
    return 0
fi

open "$file"
