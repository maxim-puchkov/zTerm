# spectrum
#
# Autoload this function from a script to set
# associative arrays FG, fg, BG, bg, FX, fx.
# 
# Usage:
# spectrum
#
# Examples:
# `autoload -Uz spectrum && spectrum'
#
# See also:
# 'spectrum.zsh' script from 'oh-my-zsh'.
typeset -AHg  FX FG BG fx bg fg
FX=(
  reset     "%{[00m%}"
  bold      "%{[01m%}"  no-bold      "%{[22m%}"
  dim       "%{[02m%}"  no-dim       "%{[22m%}"
  italic    "%{[03m%}"  no-italic    "%{[23m%}"
  underline "%{[04m%}"  no-underline "%{[24m%}"
  blink     "%{[05m%}"  no-blink     "%{[25m%}"
  reverse   "%{[07m%}"  no-reverse   "%{[27m%}"
)
set -A fx   ${(%kv)FX}


local f="[38;5;"
local b="[48;5;"

local color c
for color in {001..099}; do
  FG[$color]="%{${f}${color}m%}"
  BG[$color]="%{${b}${color}m%}"
  fg[$color]="${f}${color}m"
  bg[$color]="${b}${color}m"
  
  local -LZ c=$color
  FG[${c%% *}]="%{${f}${color}m%}"
  BG[${c%% *}]="%{${b}${color}m%}"
  fg[${c%% *}]="${f}${color}m"
  bg[${c%% *}]="${b}${color}m"
done


for color in {100..255}; do
  FG[$color]="%{${f}${color}m%}"
  BG[$color]="%{${b}${color}m%}"
  fg[$color]="${f}${color}m"
  bg[$color]="${b}${color}m"
done


return 0
