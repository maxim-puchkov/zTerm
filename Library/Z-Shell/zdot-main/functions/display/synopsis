  /usr/bin/man $argv                     |
  /usr/bin/col -b                        |
  /usr/bin/awk '/^SYN/, /^$/ {print $0}' |
  /usr/bin/sed -e '/^SYN/d' -e '/^$/d'   |
  /bin/cat -n
