local -a exclude
exclude=( '*.'{'*'{history,sessions},zsh-theme} )

/usr/bin/grep             \
    --recursive           \
    --no-messages         \
    --color=always        \
    --text                \
    --exclude="$exclude"  \
    "$@"                  \
    $ZDOTDIR
