#!/bin/zsh

#  zalias 
#  /usr/local/zterm/Library/Z-Shell/sources/zalias
#
#  User-specific profile for interactive zsh(1) shells.
#  Created on October 9, 2020.


#MARK: - Recently Added
#alias wf='watch -c -d -n2 "zsh /usr/local/zterm/zsh/WatchFile"'
alias wf='watchfile'
alias re='exec -l zsh'

alias theme='open -a Xcode ~zdot/custom-themes/term3.zsh-theme'
alias zterm='open -a Xcode ~zterm/zterm.xcodeproj'


# Date
alias ddate='/bin/date -j +"%Y-%m-%d"'    # Default: 2020-10-11
alias ldate='/bin/date -j +"%B %-e, %Y"'  # Long: October 11, 2020
alias atdate='/bin/date -j +"%F at %T"'   # At: 2020-10-11 at 00:00:00

alias mtime='/usr/bin/stat -t "%F at %T" -f "%N%t[modified on %Sm]"'


# Property lists
alias pb='/usr/libexec/PlistBuddy'
alias print-pl='/usr/libexec/PlistBuddy -c "print"'

# Terminals
alias term1='/usr/bin/open -a Terminal'
alias term2='/usr/bin/open -a iTerm'

# iTerm window opacity
alias 2o='opacity'
alias 2of='opacity 0.0'
alias 2on='opacity 1.0'


#MARK: - Noglob Aliases
alias pipeset='noglob pipeset'

alias casex='noglob casex'
alias expx='noglob expx'



#MARK: - Temporary Aliases
# Zdot dirs
alias zdot1='cd /usr/local/zterm/zsh'
alias zdot2='cd /usr/local/Terminal/Library/zsh'

















#MARK: - Regular Aliases
# Builtin 'autoload'
alias aut='builtin autoload'
alias autz='builtin autoload -Uz'

# Builtin 'builtin'
alias bltn='builtin'

# Function 'compdef'
alias cdef='compdef'


# Command 'ls'
alias ls='/bin/ls -BFGHhk'
## List all
alias lsa='ls -a' \
      la='ls -la' \
      al='ls -la'
## List long
alias l='ls -l'   \
      ll='ls -lA' \
      lll='() { ls -lA "${@:-$PWD}/"*; }'
## List flags
alias lf='ls -lO'
## List dot-files
alias -- {.ls,ls.}='() ( cd -q ${@:-$PWD};  ls -d  .*; )'
alias -- {.l1,l1.}='() ( cd -q ${@:-$PWD} && ls -1d .*; )'
alias -- {.ll,ll.}='() ( cd -q ${@:-$PWD} && ls -ld .*; )'
## List zdot-files ???:
alias -- .z='() ( cd -q $ZDOTDIR && find ./.z*(:t) -prune -type f; )'


# Function 'list'
## List time of Creation
alias ltc='list tc' \
      ltca='list tc -a'
## List time of Access
alias lta='list ta' \
      ltaa='list ta -a'
## List time of CHange
alias ltch='list tch'
## List time of Modification
alias ltm='list tm'
## List Size
alias lS='list S' \
      lSa='list S -a'
## List highlighted flags
alias lsf='list f'

# List images (iterm2)
alias lsimg='imgls'



# Command 'chflags'
alias hide='chflags hidden' \
      unhide='chflags nohidden'
alias lock='chflags uchg'   \
      unlock='chflags nouchg'


# Command 'chmod'
alias -- +r='chmod +r' \
         -r='chmod -r'
alias -- +w='chmod +w' \
         -w='chmod -w'
alias -- +x='chmod +x' \
         -x='chmod -x'


# Builtin 'echo'
alias e='builtin echo -'
alias E='sprint --magenta-bg --white --bold --'

# Command 'find'
alias findl='/usr/bin/find -L'

# Builtin 'functions'
alias fns='functions'

# Command 'google'
alias ggl='/usr/local/bin/google'


# Command 'git'
alias gcm='git commit -m'
alias grs='git restore --staged'
alias gs='git status'
alias gt='() { cd ~zterm && git status; };'


# Command 'grep'
alias gr='grep'
alias grepa='egrep --color=always --text --regexp ".*"'


# Command 'hexdump'
alias hd='/usr/bin/hexdump'

# Help
alias help='run-help'

# Command 'launchctl'
alias lctl='/bin/launchctl'

# Command 'ln'
alias lns='ln -s'  \
      sln='ln -s'
## Unlink
alias unl='unlink' \
      uln='unlink'


# Builtin 'print'
alias p='print'
alias printp='builtin print -P' \
      pp='printp'
## Print new line
alias printl='builtin print -l' \
      pl='printl'
## Print without new line
alias printn='builtin print -n' \
      pn='printn'
## Print hashed directories
alias printd='builtin print -P -D'
## Print prompt sequences
alias print-='builtin print -P --'    \
      p-='print-'
## Print parser status
alias print-parser='print -P -- "%_"' \
      print-parser-rev='print -P -- "%^"'


# Command 'openssl'
alias openssl='/usr/local/opt/openssl/bin/openssl'
alias sha256='openssl sha256'


# Command 'open'
alias o='open'
alias op='open'
## Open in editor
alias xc='open -a Xcode'
alias ij='open -a "IntelliJ IDEA CE"'
## Open dot files in Xcode
alias .g='open -a Xcode .gitignore'
alias .ci='open -a Xcode .gitlab/.gitlab-ci.yml'
## Open Z shell project files
alias zshrc='open -a Xcode ~zdot/.zshrc'
alias zprofile='open -a Xcode ~zdot/.zprofile'
##
alias zzz='open ~zterm/zterm.xcodeproj'
## Open an application
alias hxf='open -a "Hex Fiend"'
alias vb='open -a VirtualBox'
alias music='open -a Music'


# Python
alias python='/usr/local/bin/python3'
alias python3.7='/usr/local/bin/python3.7'
alias python3.8='/usr/local/bin/python3.8'
##
alias pip='command pip3'
alias idle='command idle3'
##
alias p2='python2'
alias p3='python3'


## Unset
alias uns='builtin unset'
alias unf='builtin unfunction'


# Command 'sqlite3'
alias s3='/usr/bin/sqlite3'

# Command 'strings'
alias str='/usr/bin/strings'

# Builtin 'type'
alias types='builtin type -a'

# Command 'tar'
alias tarch='/usr/bin/tar zcvf'


# Builtin 'typeset'
alias ts='typeset'            \
      tsp='typeset -p'        \
      tsm='noglob typeset -m' \
      tspm='noglob typeset -p -m'
## Other types
alias Assoc='typeset -A' \
      Asc='typeset -A'
alias Arr='typeset -a'
alias Float='typeset -F'
alias int='typeset -i'


# Builtin 'whence'
alias wha='builtin whence -a'





#MARK: One letter aliases
alias c='cat'
alias j='() { print -r -- "${(j::)argv}"; }'
alias n='nano'
alias q='exit 0;'
alias ,='() { print -nr -c -- "{${(j:, :)argv}}" "(length ${#argv})"; }'
alias a='ls -a'



# Commands 'cp', 'mv', 'rm', 'ln'
alias cp='/bin/cp -i'
alias mv='/bin/mv -i'
alias rm='/bin/rm -i'
alias ln='/bin/ln -Ffhs'





alias nano='nano --mouse'
#alias diff\?='diff --brief --report-identical-files'


alias diff='/usr/local/bin/diff --color=always'
alias diffl='diff --suppress-common-lines --side-by-side'




#MARK: Custom commands
# Change to current Finder directory
alias cfd='cd "$(pfd)"'

# Set system appearance
alias darks='set-system-appearance dark'
alias lights='set-system-appearance light'

# Set iTerm profile
alias it2s='it2 switch-profile'     \
      it2l='it2 set-profile Light'  \
      it2d='it2 set-profile Dark'   \
      it2ds='it2 set-profile "Dark Small"' \
      2s='it2s'
alias 22='it2'

# Show an object
alias {s,i}='show'

# Show command source code
alias ss='showsrc'

# Print type of arguments
alias tf='typeof +v'



#MARK: Java
alias antlr='java -jar /usr/local/lib/antlr-4.8-complete.jar'
alias grun='java org.antlr.v4.gui.TestRig'



#MARK: - Global Aliases
# Silence errors
alias -g noerr='2>/dev/null'
alias -g 2NIL='2>/dev/null'

# Silence errors and output
alias -g quiet='&>/dev/null'
alias -g NIL='&>/dev/null'

alias -g _nerr='2>/dev/null'
alias -g _nout='1>/dev/null'
alias -g _nin='0</dev/null'
alias -g _n='&>/dev/null'


alias -g _u2='>&2'
alias -g _u1='>&1'



# Conditional:  'if [[ ... ]] _T'
alias -g _T='; then print -P -- %2FTRUE%f; else print -P -- %1FFALSE%f; fi;'





#MARK: Function Aliases
function calculate~alias() {
  printf '%i\n' "$(( ${argv} ))"
}
alias {calculate,calc,+}='noglob calculate~alias'
