alias wha='builtin whence -av'





#MARK: - Extended Commands
alias cd='cdp'
alias nano='nano --mouse'
#alias diff='diff -y'

alias diff='diff --suppress-common-lines --side-by-side --color'

alias zrc='open -a Xcode ~zsh/.{zprofile,zutil,zalias,zshrc}'
alias zpro='open -a Xcode ~zsh/.{zutil,zalias,zshrc,zprofile}'




