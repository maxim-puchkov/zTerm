#!/bin/zsh

#  User-specific profile for interactive zsh(1) shells
#
#
#
#


#MARK: - Global Aliases
# Silence errors
alias -g noerr='2>/dev/null'
alias -g 2NIL='2>/dev/null'

# Silence errors and output
alias -g quiet='&>/dev/null'
alias -g NIL='&>/dev/null'

# Conditional:  'if [[ ... ]] _T'
alias -g _T='; then print -P -- TRUE; else print -P -- FALSE; fi;'

# Loops:  'for ... _F' or 'while ... _F'
alias -g _F='; do print-var x; done;'


alias zshrc='open -a Xcode ~zsh/.zshrc'
alias zalias='open -a Xcode ~zsh/.zalias'
alias zprofile='open -a Xcode ~zsh/.zprofile'
alias zutil='open -a Xcode ~zsh/.zutil'
alias zzzs='open -a Xcode "$zdot/.z"*~"$zdot/."(zcompdump|zsh_sessions)*'


alias sp='sprint'
alias hxd='open -a /Applications/"Hex Fiend.app"'

alias clrscreen='printf "\e[r"'
alias x+='chmod +x' 


#MARK: - Regular Aliases
# Builtin 'autoload'
alias al='builtin autoload -Uz'
alias al-='builtin autoload'

# Command 'tar'
alias arc='/usr/bin/tar zcvf'

# Builtin
alias bltn='builtin builtin'


# Command 'ls'
alias ls='/bin/ls -BFGHhk'
alias lsa='ls -a' \
      la='ls -la'
alias l='ls -l' \
      ll='ls -lA' \
      lll='() { ls -lA "${@:-$PWD}/"*; }'
alias lf='ls -lO'

# Function 'list'
alias ltc='list tc' \
      ltca='list tc -a'
alias lta='list ta' \
      ltaa='list ta -a'
alias ltch='list tch'
alias ltm='list tm'
alias lS='list S' \
      lSa='list S -a'
alias listf='list f'

# iTerm2 script
alias lsimg='imgls'


# Command 'chflags'
alias hide='chflags hidden' \
      unhide='chflags nohidden'
alias lock='chflags uchg' \
      unlock='chflags nouchg'


# Command 'cp'
alias cp='/bin/cp -i'

# Builtin 'echo'
alias e='builtin echo -'
alias E='esc 1 38 45 -r 0 -t'

# Command 'find'
alias findl='/usr/bin/find -L'

# Builtin 'functions'
alias fns='functions'

# Command 'hexdump'
alias hd='hexdump'

# Command 'ln'
alias lns='ln -s' \
      sln='ln -s'
# Unlink
alias unl='unlink' \
      uln='unlink'

# Command 'mv'
alias mv='/bin/mv -i'


# Builtin 'print'
alias printp='builtin print -P' \
      pp='printp' \
      p='printp'
#
alias printl='builtin print -l' \
      pl='printl'
#
alias printn='builtin print -n' \
      pn='printn'
#
alias printd='builtin print -P -D'
#
alias print-='builtin print -P --' \
      p-='print-'


# Shell constructs
alias print-parsed='print -P -- "%_"'
alias print-parsed-rev='print -P -- "%^"'

# Pygments
alias pyg='/usr/local/bin/pygmentize'

# Command 'git'
alias gcm='git commit -m'
alias grs='git restore --staged'
alias gs='git status'
alias gt='() { cd "$zterm" && git status; };'

# Command 'google'
alias ggl='/usr/local/bin/google'


# Command 'grep'
alias gr='grep'
alias grepa='egrep --color=always --text --regexp ".*"'
alias mang='grepman'

alias hgrep='GREP_COLOR="1;30;43" grep'
alias hegrep='GREP_COLOR="1;30;43" egrep'
alias hfgrep='GREP_COLOR="1;30;43" fgrep'


# Help
alias help='run-help'

# Command 'launchctl'
alias lctl='command launchctl'

# Completion definition
alias cdef='compdef'





# Command 'open'
alias o='open'
alias op='open'
alias xc='open -a Xcode'
alias ij='open -a "IntelliJ IDEA CE"'
alias vb='open -a VirtualBox'
alias music='open -a Music'


# Python
alias python='command python3'
alias python3.7='/usr/local/opt/python@3.7/bin/python3.7'
alias python3.8='/usr/local/opt/python@3.8/bin/python3.8'

alias pip='command pip3'
alias idle='command idle3'

alias p2='python2'
alias p3='python3'


# Command 'rm'
alias rm='/bin/rm -i'

# Builtin 'exit'
alias q='builtin exit 0;'


# Builtin 'set'
alias setx='set -o extendedglob'
alias set1='set -x; set +x -- -x -y oy -z oz1 oz2 -- -r REST' \
      set2='set -- -a -b -c -d D -e E -f F' \
      set3='set -- -a -b -c -d D -e E -f F --long LONG args "hello world"'


# 'unset'
alias uns='unset'
alias unf='unfunction'


