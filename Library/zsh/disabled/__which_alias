#  Created by Maxim Puchkov on 2020-04-13.
#  Copyright Â© 2020 Maxim Puchkov. All rights reserved.


# 'which' command alias.
function __which_alias() {
    if [[ $# -eq 0 ]]; then
        return 1
    fi
    
    local result=()
    for cmd in "$@"; do
        local command_info=()
        local line_break="\n"
        which -a $cmd | while read -r line; do
            command_info+=( "$line" )
        done
        command_info[1]=$(bgreen ">  ${command_info[1]}")
        result+=$( printf "%s\n" "${(@)command_info}" )
    done
    printf '%s\n' $result
    return 0
}

