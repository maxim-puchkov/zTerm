# Start shell with minimum environment
function empty-env() {
   command env -i \
        SHELL="/bin/zsh" \
        TERM="xterm-256color" \
        USER="$USER" \
        HOME="$HOME" \
        PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/Library/Apple/usr/bin" \
        TMPDIR="$TMPDIR" \
        LOGNAME="$LOGNAME" \
        DISPLAY="$DISPLAY" \
        SSH_AUTH_SOCK="$SSH_AUTH_SOCK" \
        __CF_USER_TEXT_ENCODING="$__CF_USER_TEXT_ENCODING" \
    zsh -f -d "$@"
}
