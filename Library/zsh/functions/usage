# Print command usage
function usage() {(
  setopt extendedglob
  typeset -i usage_colorize=1
  
  case $1 in
    # No input
    '')
      error -1
      return
    ;;
    
    # Color
    (-c|--color)    usage_colorize=1; shift  ;;
    (+c|--no-color) usage_colorize=0; shift  ;;
    
    # Print an error message before usage
    '-e')
      typeset error_desc=$2
      shift 2
    ;;
  esac
  
  # Usage color and line prefix
  typeset -i color=6
  typeset prefix=${(%):-'\t %F{'${color}'}>%f'}
  
  # Append 'Usage' label to description
  typeset -a usage_desc=()
  usage_desc+=(${(%):-'%F{'${color}'}%U''Usage''%u%f:'})
  
  # Append arguments
  typeset -i i=1
  autoload -Uz get
  while [[ -n $1 ]]; do
    case $1 in
      # !:  print raw character '+' or '-' instead of
      #     breaking lines
      (?[\!])
        usage_desc[$i]+=$(syntaxf " ${1%'!'}")
      ;;
      
      # +:  add new line and continue the sentence
      (+)
        [[ -z $2 ]] && error "Missing argument after ${1}"
        shift
        usage_desc[$i]+=$(syntaxf "\n\t   $1")
      ;;
      
      # -:  add new line and begin next sentence
      (-)
        [[ -z $2 ]] && error "Missing argument after ${1}"
        shift
        let i=$i+1
        usage_desc[$i]+=$(syntaxf "${prefix} $1")
      ;;
      
      (*)  usage_desc[$i]+=$(syntaxf " $1") ;;
    esac
    shift
  done
  
  
  trap '{
    builtin print -- ${(@Fe)usage_desc}
  }' EXIT
  
  # Print error
#  if [[ -n $error_desc ]]; then
#    error -T +. "${error_desc}\n"${(@Fe)usage_desc}
#  else
#    builtin print -- ${(@Fe)usage_desc}
#  fi
  return $?
)}
