# <#Function description#>
function readexpr() {
#

  typeset reply_id=${1:-reply}
  typeset -ag $reply_id
  set -A $reply_id $REPLY
  local EXPR=${langinfo[YESEXPR]}
  case $1 in
    -e)
      EXPR=${2?}
      shift 2
    ;;
    -m)
      message=${2:=''}
      shift 2
    ;;
  esac
  
  typeset -gx REPLY
  
  print $argv
  print -n 'Press return to continue... '
  read -s -k1 REPLY
  print
  
  [[ $REPLY =~ '^[[:space:]]+$' ]]
  return $?
}
