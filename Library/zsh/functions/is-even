# <#Function description#>
function is-even() {
    local arg=($@)
    if [[ $#arg == 1 ]] arg=$arg[1];
    if [[ ! $arg =~ '^[0-9]+$' ]] arg=${#arg};
    return $(( $arg % 2 ))
}
