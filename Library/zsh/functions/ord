# ord - order option letters alphabetically
#
# Examples:
#   `ord -n -o m'   prints  'mno'
#   `ord -a -1 -1'  prints  '1Za'
function ord() {(
  set -o extendedglob
  printf '%b' "${(@s::j::ou)argv##-#}" '\n'
)}
