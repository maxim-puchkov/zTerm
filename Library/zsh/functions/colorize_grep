#!/bin/zsh

#  colorize_grep
#  Z-Function (6)
#
#  Created by Maxim Puchkov on 2020-04-29.
#  Copyright Â© 2020 Maxim Puchkov. All rights reserved.


# <#Function description#>
function colorize_grep() {
    typeset -A grep_colors
    grep_colors=($(< $zterm/etc/colormap32.env))
    local values=(${(v)${(v)grep_colors#'\e['}%m})
    grep_colors=(${(@k)grep_colors:^values})
    
    local default_color='0;96'
    local color_name="$1"
    shift
    
    local selected_color=${grep_colors[$color_name]}
    command env GREP_COLOR=${selected_color:-$default_color} "${@}"
    return $?
}
