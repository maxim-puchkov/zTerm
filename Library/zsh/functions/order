# order - order option letters alphabetically
#
# Examples:
#   `order -n -o m'   prints  'mno'
#   `order -a -1 -1'  prints  '1Za'
#function order() {(
#  set -o extendedglob
#  printf '%b' "${(@s::j::ou)argv##-#}" '\n'
#)}


function order() {
  builtin print -nrC1 -- "${(j::)${(@ous::)argv}}"
  return "(${#argv} == 0)"
}
