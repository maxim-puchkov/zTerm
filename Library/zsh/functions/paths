# <#Function description#>
function paths() {
#  function paths-cmd
  typeset cmd_name cmd_type
  for cmd_name; do
    cmd_type=$(whence -w -- $cmd_name | awk '{print $2;}')
    print -- "Type of '$cmd_name': '$cmd_type'"
    redbg '>'; echo
  done
  return 0
  
    print -P "Template z-function: %F{4}$0%f."
    
    # Print to stderr
    local def=$(fn src $0)
    if [[ $? -ne 0 ]]; then
        print 'Definition not found.' >&2
        return 1
    fi
    
    print -P "Defined in: %F{4}$def%f."


    return 0
}
