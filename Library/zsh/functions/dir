#MARK: - dir (version 2)
# dir - describe directory
#typeset dir_path




#MARK: - dir (version 1)

function dir() {
    typeset dirpath='.'
    if [[ -d $1 ]]; then
        dirpath=${1%/}
        shift
    fi
    typeset -a flags
    flags=(-mindepth 1 -maxdepth 1 $argv)
    find -L $dirpath $flags 2>/dev/null
    return $?
}
#compdef _find dir
