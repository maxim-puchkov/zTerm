# <#Function description#>
function aliases() {
    function aliases_source() {
        fgrep -R "alias $id='$value'" -- $fpath
    }
    
    
    local id=$1
    local value=$aliases[$id]
   
    if [[ -z $value ]]; then
        error "$id is not an alias."
        return 1
    fi
    ${0}_source $id
    return $?
}
