# <#Function description#>
function examine() {
#  unset -f "$0"
#  autoload +X examine
  
  for file in *; do
    if [[ -d $file ]]; then
      print -P -- "%K{yellow}%F{black}Directory: ${file}%f%k"
    else
      print -P -- "%K{yellow}%F{black}File: ${file}%f%k"
      head -n 3 $file
      print -- $'\n\n\n'
    fi
  done
  return 0
}
