#!/bin/zsh

#  zshenv
#  User-specific environment for zsh(1) shells.
#
#
#  Created on March 29, 2020.


#MARK: - Z shell
# zsh shell environment
export ZSHENV="$HOME/.zshenv"

# Terminal scripts & functions
export ZTERM='/usr/local/Terminal'
export ZDOTDIR="$ZTERM/Library/zsh"


# history
if [[ -d $zterm/var/log ]]; then
  HISTFILE=$zterm/var/log/$USER.zsh_history
else
  HISTFILE=$HOME/.zsh_history
fi
export HISTFILE




#MARK: - Python
# Python environment
export PYTHONENV="$HOME/.pythonenv"
